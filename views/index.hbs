<div class="container-fluid">
  <!-- Vertically centered modal -->
  <div class="modal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <form class="modal-content" id="name-form">
        <div class="modal-header">
          <h5 class="modal-title">Enter Your Name</h5>
          <button
            type="button"
            class="close"
            id="close-user-name"
            data-dismiss="modal"
            aria-label="Close"
          >
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            required
          />
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" id="modal_save">Save
            changes</button>
        </div>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <h1>Chat App</h1>
    </div>
  </div>
  <div class="row">
    <div class="col d-flex justify-content-center">
      <div class="jumbotron w-75">

        <form class="input-group mb-3" id="send-form">
          <input
            type="text"
            class="form-control"
            placeholder="Type Your Message"
            aria-label="Recipient's username"
            aria-describedby="button-addon2"
            id="message-box"
          />
          <div class="input-group-append">
            <button
              class="btn btn-outline-secondary"
              type="submit"
              id="button-addon2"
            >Send</button>
          </div>
        </form>

        <div class="message-container" id="message-container">
          {{!-- <div class="wrap" >
                  <h5 class="display-6" id="chat-username">username {{username}} </h5>
                  <p class="lead" id="chat-message">featured content or information. {{message}} </p>
                  <p> time {{time}} </p>
              </div> --}}
        </div>

        {{! <hr class="my-4"> }}
      </div>
    </div>
  </div>
</div>
